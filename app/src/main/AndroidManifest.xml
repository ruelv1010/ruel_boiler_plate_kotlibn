<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="syntactics.android.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="syntactics.boilerplate.app.base.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/syntactics_brand"
        android:label="@string/app_name"
        android:roundIcon="@drawable/syntactics_brand"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:targetApi="31" >

        <activity
            android:name="syntactics.boilerplate.app.ui.sample.activity.LoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="userPortrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

<!--        <activity-->
<!--            android:name=".ui.sample.activity.LoginActivity"-->
<!--            android:screenOrientation="userPortrait"-->
<!--            android:theme="@style/AppTheme.NoActionBar" />-->

        <activity
            android:name="syntactics.boilerplate.app.ui.sample.activity.MainActivity"
            android:screenOrientation="userPortrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="syntactics.boilerplate.app.ui.sample.activity.RegisterActivity"
            android:screenOrientation="userPortrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="syntactics.boilerplate.app.ui.article.activity.CreateArticleActivity"
            android:screenOrientation="userPortrait"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>